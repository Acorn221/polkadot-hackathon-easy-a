{
  "extends": "plasmo/templates/tsconfig.base",
  "exclude": ["node_modules"],
  "include": [".plasmo/index.d.ts", "./src/**/*.ts", "./src/**/*.tsx"],
  "compilerOptions": {
    "paths": {
      "~*": ["./*"],
      "@/*": ["src/*"]
    },
    "baseUrl": ".",
  },
  "baseUrl": "./src" /* Specify the base directory to resolve non-relative module names. */
}
